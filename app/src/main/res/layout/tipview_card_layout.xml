<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:id="@id/tipViewCard"

    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"

    app:cardBackgroundColor="?attr/tipViewCardHighlight"
    app:cardElevation="@dimen/tipViewCardElevation"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.v7.widget.AppCompatSpinner

            android:background="?android:selectableItemBackground"

            android:layout_marginTop="@dimen/spinnerMargin"
            android:layout_marginLeft="@dimen/horMargin"
            android:layout_marginStart="@dimen/horMargin"

            android:id="@id/presetSelector"

            android:spinnerMode="dialog"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <android.support.v7.widget.AppCompatImageButton

            android:background="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/settings_icon"

            android:scaleType="centerInside"

            android:layout_marginEnd="@dimen/horMargin"
            android:layout_marginRight="@dimen/horMargin"
            android:layout_marginTop="@dimen/horMargin"

            android:id="@id/extras"

            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />


        <com.example.bryan.tipeaze.TipView
            android:id="@id/tipView"

            android:layout_centerHorizontal="true"

            android:layout_below="@id/extras"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <RelativeLayout
            android:layout_marginStart="@dimen/horMargin"
            android:layout_marginLeft="@dimen/horMargin"
            android:layout_marginBottom="@dimen/horMargin"

            android:layout_below="@id/tipView"

            android:id="@id/personalPartyTabs"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.example.bryan.tipeaze.RobotoBasedTextview
                style="@style/personalTabsCurrentTextStyle"

                app:font="BOLD"

                android:id="@id/personalTextView"
                android:text="@string/personal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.example.bryan.tipeaze.RobotoBasedTextview
                style="@style/personalTabsSecondaryTextStyle"
                android:layout_marginTop="@dimen/personalPartyTabsPosMargin"

                app:font="REGULAR"

                android:id="@id/partyTextView"
                android:text="@string/party_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>



    </RelativeLayout>


</android.support.v7.widget.CardView>


<View
android:id="@id/addFabPosView"
android:layout_width="match_parent"
android:layout_height="@dimen/halfFabNormal"
android:layout_below="@id/tipViewCard"/>
<android.support.design.widget.FloatingActionButton

    android:clickable="true"

    app:rippleColor="?attr/colorSecondary"

    app:srcCompat="@drawable/plus"

    android:layout_marginEnd="@dimen/horMargin"
    android:layout_marginRight="@dimen/horMargin"
    android:layout_marginBottom="@dimen/horMargin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:id="@id/addFab"

    app:fabSize="normal"
    app:backgroundTint="?attr/addFabBackground"
    app:elevation="@dimen/addFabElevation"

    android:layout_alignBottom="@id/addFabPosView"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" />

</RelativeLayout>