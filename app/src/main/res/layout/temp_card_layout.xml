<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        app:elevation="6dp"
        android:id="@+id/tempCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <include layout="@layout/temp_card_layout_content"/>

        </RelativeLayout>


</android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/tempFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:backgroundTint="@color/milkyWhite"
        app:elevation="4dp"
        app:layout_anchor="@id/tempCard"
        app:layout_anchorGravity="bottom|center_horizontal|right" />


</android.support.design.widget.CoordinatorLayout>

