<resources>

    <style name="TipViewDefStyle">
        <!--Replace dimensional attributes' values with references. -->
        <item name="thumbHighlight">?attr/colorMain</item>
        <item name="thumbTouchHighlight">?attr/colorTertiary</item>
        <item name="thumbTouchTextHighlight">?attr/colorMain</item>
        <item name="thumbSize">38dp</item>
        <item name="thumbTextSize">@dimen/textSmall</item>
        <item name="thumbTextHighlight">?attr/colorPrimary</item>
        <item name="thumbTextPadding">5dp</item>

        <item name="totalTrackSize">@dimen/totalTrackSize</item>
        <item name="trackHighlight">?attr/colorSecondary</item>
        <item name="trackStrokeSize">4dp</item>
        <item name="trackStrokeHighlight">@color/milkyWhite</item>
        <item name="trackTextHighlight">?attr/colorTertiary</item>
        <item name="trackTextSize">22sp</item>

        <item name="tickmarkHighlight">?attr/colorPrimary</item>
        <item name="tickmarkWidth">4dp</item>
    </style>

    <style name="personalTabsCurrentTextStyle">
        <item name="android:textSize">@dimen/textSmall</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorTertiary</item>
    </style>

    <style name="personalTabsSecondaryTextStyle">
        <item name="android:textSize">@dimen/textMicro</item>
        <item name="android:textColor">?attr/personalTabsSecondaryTextHighlight</item>
    </style>

    <style name="SpinnerStyling" parent="Base.Widget.AppCompat.Spinner">
        <item name="colorControlNormal">#ff0077</item>
    </style>


    <style name="AddTotalCalcButtonStyle">
        <item name="android:minWidth">@dimen/addCalcWidth</item>
        <item name="android:layout_width">@dimen/addCalcWidth</item>
        <item name="android:layout_height">@dimen/addCalcHeight</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">@dimen/textXLarge</item>
        <item name="android:textColor">?attr/addCalcTertiaryColor</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>


    <style name="productTotalTextStyle">
        <item name="font">BOLD</item>
        <item name="android:visibility">invisible</item>
        <item name="android:textSize">@dimen/textLarge</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/dummPrice</item>
        <item name="android:textColor">?attr/colorMain</item>
    </style>

    <style name="splitItemStyle">
        <item name="android:visibility">invisible</item>
        <item name="android:src">@drawable/personal_people</item>
        <item name="android:padding">2.5dp</item>
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
    </style>

    <style name="accessoryTextStyle">
        <item name="font">BOLD</item>
        <item name="android:textSize">@dimen/textSmall</item>
        <item name="android:textColor">?attr/colorTertiary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="accessoryTextStyleSmall">
        <item name="font">LIGHT</item>
        <item name="android:textSize">@dimen/textSmall</item>
        <item name="android:textColor">?attr/colorMain</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>
